@model AppUI.Models.ParticipantEventDetails
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<html>
<head>
    <title>Delete Confirmation</title>
</head>
<body>
    <h2>Are you sure to delete record of: @Model.ParticipantEmailId?</h2>
    <form asp-route="RemoveParticipant" method="post">
        <input type="hidden" asp-for="Id" />
        <div>
            <label>Email:</label>
            <input asp-for="ParticipantEmailId" readonly />
        </div>
        <div>
            <label>Event ID:</label>
            <input asp-for="EventId" readonly />
        </div>
        <div>
            <label>Attended:</label>
            <input asp-for="IsAttended" readonly />
        </div>
        <div>
            <input type="submit" value="Delete">
            <a asp-route="ParticipantEventList">Cancel</a>
        </div>
    </form>
</body>
</html>
